super + b
    $HOME/.local/bin/thorium-browser

super + e
      emacsclient -c -a 'emacs'

alt + space
    copyq show

super + Delete
    rofi -show powermenu -theme ~/.config/rofi/logout.rasi -modi powermenu:rofi-power-menu &

super + BackSpace
      betterlockscreen -l
@Print
    flameshot gui

XF86Audio{Raise,Lower}Volume
	$HOME/.local/bin/changevolume {up,down}
	
XF86MonBrightness{Up,Down}
	$HOME/.local/bin/changebrightness {up,down}

XF86AudioMute
	$HOME/.local/bin/changevolume mute
	
super + r
    rofi -show drun

#change language
ctrl + space 
    $HOME/.local/bin/switchlang

#reload sxhkd
super + shift + r
      pkill -USR1 -x sxhkd
